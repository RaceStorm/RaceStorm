<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:weightSum="1">

    <Button
        android:text="@string/SteuerungLinks"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/btnLinks" />


    <Button
        android:text="Rückwärts"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/beispiel_buttonsrot"
        android:id="@+id/btn"
        android:layout_above="@+id/btnLinks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp" />

    <Button
        android:text="@string/SteuerungGas"
        android:id="@+id/btnGas"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:background="@drawable/beispiel_buttonsgas"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:layout_marginBottom="36dp" />

    <Button
        android:text="@string/SteuerungRechts"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/beispiel_buttonsrot2"
        android:id="@+id/btnRechts"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>